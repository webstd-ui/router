{
    "typescript.preferences.importModuleSpecifierEnding": "js",
    "prettier.enable": true,

    "biome.enabled": false,
    "dprint.experimentalLsp": false,
    "deno.enable": false,

    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,

    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "*.css": "$(capture).css.map, $(capture).*.css",
        ".env": "*.env, .env.*, .envrc, env.d.ts",
        "package.json": ".github*, .npmrc, .vscode*, biome.json*, eslint.config.*, mise.toml, pnpm-*.yaml, prettier.config.*, .prettierignore, tsconfig.*, wrangler.toml, wrangler.json*, workspace.json",
        "readme*": "agent*, authors, backers*, changelog*, citation*, claude*, code_of_conduct*, codeowners, contributing*, contributors, copying, credits, docs.md, governance.md, history.md, license*, maintainers, readme*, security.md, sponsors*",
        "vite.config.*": "*.plugin.ts, babel.config.*, nitro.config.*, vitest.config.*"
    },
    "files.exclude": {
        // "**/.claude": true,
        // "**/dist": true
    },

    "todohighlight.keywords": [
        "MARK:",
        {
            "text": "FIXME:",
            "backgroundColor": "#F14848"
        },
        {
            "text": "TODO:",
            "backgroundColor": "#3593FF"
        }
    ],
    "todohighlight.defaultStyle": {
        "backgroundColor": "#434B54",
        "color": "#fff",
        "borderRadius": "2px"
    }
}
