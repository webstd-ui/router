{
    "include": ["**/*"],
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "types": ["vite/client"],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "@remix-run/dom",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,

        "checkJs": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "paths": {
            "~/*": ["./src/*"]
        }
    }
}
