{
    "compilerOptions": {
        "strict": true,
        "module": "ESNext",
        "target": "ES2022",
        "lib": ["DOM", "DOM.Iterable", "ESNext" /* "ESNext.Decorators" */],
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        // "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,

        "baseUrl": ".",
        "paths": {
            "~/*": ["./reference-app/*"],
            "@webstd-ui/router": ["./src/index.ts"],
            "@webstd-ui/view": ["../view/src/index.ts"],
            "@webstd-ui/view/internals": ["../view/src/internals/index.ts"],
            "@webstd-ui/observable": ["../observable/src/index.ts"]
        }
    },
    "exclude": ["vite.config.ts"],
    "include": ["./**/*.ts"]
}
